<elements:ElementBase x:Class="Vkm.ComplexSim.View.Elements.VkmRadarTarget"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:elements="clr-namespace:Vkm.ComplexSim.View.Elements"
                      xmlns:viewModel="clr-namespace:Vkm.ComplexSim.View.Elements.ViewModel"
                      mc:Ignorable="d"
                      d:DesignHeight="450" d:DesignWidth="800"
                      d:DataContext="{d:DesignInstance Type=viewModel:VkmRadarTargetViewModel}">
    <Grid>
        <Polygon Stroke="Green" StrokeThickness="1" Fill="LimeGreen" Points="0, 20, 20, 20, 10, 0" Opacity="{Binding Path=OpacityPercents}"/>
    </Grid>
</elements:ElementBase>