<elements:ElementBase x:Class="Vkm.Smalta.View.Elements.VkmNumberDisplay"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                      xmlns:elements="clr-namespace:Vkm.Smalta.View.Elements"
                      xmlns:viewModel="clr-namespace:Vkm.Smalta.View.Elements.ViewModel"
                      mc:Ignorable="d"
                      d:DesignHeight="100" d:DesignWidth="200"
                      d:DataContext="{d:DesignInstance Type=viewModel:VkmNumberDisplayViewModel}">
    <Grid>
        <Border BorderThickness="1" CornerRadius="20" BorderBrush="Gray" Background="White" MinWidth="200">
            <TextBox Text="{Binding Value}" 
                     Background="Transparent"
                     IsReadOnly="True"
                     IsReadOnlyCaretVisible="False"
                     FontSize="50"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     BorderThickness="0"
                     Cursor="Arrow"/>
        </Border>
    </Grid>
</elements:ElementBase>