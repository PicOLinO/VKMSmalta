<Window x:Class="VKMSmalta.Dialogs.CheckResultsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:VKMSmalta.Dialogs.ViewModel"
        xmlns:converters="clr-namespace:VKMSmalta.Converters"
        mc:Ignorable="d"
        Title="Результат" Height="80" Width="180"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=viewModel:CheckResultsDialogViewModel}">
    <Grid>
        <DockPanel>
            <TextBox Text="Ваш результат: " BorderThickness="0" IsReadOnly="True"/>
            <TextBox Text="{Binding Path=Value, Converter={converters:ValueToStringValueConverter}}" BorderThickness="0" IsReadOnly="True"/>
        </DockPanel>
    </Grid>
</Window>
