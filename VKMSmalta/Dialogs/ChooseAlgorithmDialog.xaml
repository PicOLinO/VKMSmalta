<Window x:Class="VKMSmalta.Dialogs.ChooseAlgorithmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKMSmalta.Dialogs"
        xmlns:viewModel="clr-namespace:VKMSmalta.Dialogs.ViewModel"
        xmlns:domain="clr-namespace:VKMSmalta.Domain"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        mc:Ignorable="d"
        Title="ChooseAlgorithmDialog" Height="300" Width="300"
        d:DataContext="{d:DesignInstance Type=viewModel:ChooseAlgorithmDialogViewModel}">
    <Grid>
        <ListView SelectedItem="{Binding Path=SelectedAlgorithm}" ItemsSource="{Binding Path=Algorithms}" SelectionChanged="Selector_OnSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type domain:Algorithm}">
                    <TextBlock Text="{Binding Path=Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
