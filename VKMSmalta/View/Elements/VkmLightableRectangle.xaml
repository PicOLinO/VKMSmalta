<local:ElementBase x:Class="VKMSmalta.View.Elements.VkmLightableRectangle"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:VKMSmalta.View.Elements"
                   xmlns:viewModel="clr-namespace:VKMSmalta.View.Elements.ViewModel"
                   mc:Ignorable="d"
                   d:DesignHeight="300" d:DesignWidth="200"
                   d:DataContext="{d:DesignInstance Type=viewModel:VkmLightableRectangleViewModel}">
    <Border CornerRadius="3" Width="75" Height="25" Background="White" Opacity=".4"
            Visibility="{Binding Path=LightableRectangleVisibility}">
        <Border.Effect>
            <DropShadowEffect Color="White" BlurRadius="15" RenderingBias="Performance" Opacity="100" ShadowDepth="0"
                              Direction="0" />
        </Border.Effect>
    </Border>
</local:ElementBase>