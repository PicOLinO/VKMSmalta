<local:ElementBase x:Class="VKMSmalta.View.Elements.VkmLamp"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:VKMSmalta.View.Elements"
                   xmlns:viewModel="clr-namespace:VKMSmalta.View.Elements.ViewModel"
                   xmlns:hints="clr-namespace:VKMSmalta.View.Hints"
                   mc:Ignorable="d"
                   d:DesignHeight="450" d:DesignWidth="800"
                   d:DataContext="{d:DesignInstance Type=viewModel:VkmLampViewModel}">
    <Grid>
        <Image x:Name="PART_Lamp" Source="{Binding Path=ImageSource}" />
        <Popup IsOpen="{Binding Path=IsHintOpen}" StaysOpen="True"
               VerticalOffset="20" HorizontalOffset="10"
               PlacementTarget="{Binding ElementName=PART_Lamp}"
               Placement="Right" MinWidth="170" MinHeight="60"
               PopupAnimation="Fade" AllowsTransparency="True">
            <hints:Hint DataContext="{Binding Path=Hint}" />
        </Popup>
    </Grid>
</local:ElementBase>