<Window x:Class="VKMSmalta.View.Hint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:VKMSmalta.View.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        BorderThickness="0"
        Background="Transparent"
        Height="Auto"
        Width="Auto"
        AllowsTransparency="True"
        x:Name="_this"
        d:DesignHeight="300" d:DesignWidth="300"
        d:DataContext="{d:DesignInstance Type=viewModel:HintViewModel}">
    <Grid>
        <Border Margin="10 0 0 0" Background="White" CornerRadius="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding Path=HintText}" />
                <Button Grid.Row="1" Command="{Binding ClickCommand}" CommandParameter="{Binding ElementName=_this}" Content="Далее" Width="100" Margin="10 10 10 10" />
            </Grid>
        </Border>
        <Polygon Fill="White" Points="0, 0, 40, 0, 10, 50" />
    </Grid>

</Window>