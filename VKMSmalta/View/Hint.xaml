<UserControl x:Class="VKMSmalta.View.Hint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:VKMSmalta.View.ViewModel"
             mc:Ignorable="d"
             BorderThickness="0"
             Background="Transparent"
             MinHeight="80"
             MinWidth="170"
             MaxWidth="270"
             d:DesignHeight="80" d:DesignWidth="271"
             d:DataContext="{d:DesignInstance Type=viewModel:HintViewModel}">
    <Grid Margin="0 10 0 0">
        <Polygon Fill="White" Points="0, 0, 40, 0, 10, 40" />
        <Border Margin="10 0 0 0" Background="White" CornerRadius="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="10 10 10 10" Text="{Binding Path=HintText}" TextWrapping="Wrap" />
                <Button Grid.Row="1" Command="{Binding ClickNextCommand}" Content="Далее" Width="100"
                            Margin="10 10 10 10" />
            </Grid>
        </Border>
    </Grid>

</UserControl>