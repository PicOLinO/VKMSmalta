<Page x:Class="VKMSmalta.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModel="clr-namespace:VKMSmalta.ViewModel"
      mc:Ignorable="d" 
      x:Name="PART_MainPage"
      d:DesignHeight="315.392" d:DesignWidth="627.692"
      Title="Смальта v1.0"
      d:DataContext="{d:DesignInstance Type=viewModel:MainPageViewModel}">
    <Grid>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <MediaElement Source="View/Videos/MainPageBackground.mov" 
                                  Stretch="Fill" 
                                  LoadedBehavior="Manual"
                                  IsMuted="True"
                                  Loaded="PART_MediaBackground_OnLoaded" 
                                  MediaEnded="PART_MediaBackground_OnMediaEnded"
                                  MediaFailed="PART_MediaBackground_OnMediaFailed"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Style="{DynamicResource OuterSeparatingRow}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{DynamicResource InnerSeparatingRow}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{DynamicResource InnerSeparatingRow}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{DynamicResource InnerSeparatingRow}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{DynamicResource OuterSeparatingRow}"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{DynamicResource OuterSeparatingColumn}"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Style="{DynamicResource InnerSeparatingColumn}"/>
            <ColumnDefinition/>
            <ColumnDefinition Style="{DynamicResource OuterSeparatingColumn}"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Студент"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Вход" Style="{DynamicResource MainButton}" Command="{Binding Path=LoginCommand}" />
        <Button Grid.Row="6" Grid.Column="1" Content="Обучение" Style="{DynamicResource MainButton}"  Command="{Binding Path=GoTrainingCommand}" />
        <Button Grid.Row="8" Grid.Column="1" Content="Экзамен" Style="{DynamicResource MainButton}" Command="{Binding Path=GoExamineCommand}" />
    </Grid>
</Page>
