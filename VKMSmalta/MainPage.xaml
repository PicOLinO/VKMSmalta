<Page x:Class="VKMSmalta.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModel="clr-namespace:VKMSmalta.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Смальта v1.0"
      d:DataContext="{d:DesignInstance Type=viewModel:MainPageViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Студент"/>
        <Button Grid.Row="1" Content="Вход" Command="{Binding Path=LoginCommand}" />
        <Button Grid.Row="2" Content="Обучение" Command="{Binding Path=GoTrainingCommand}" />
        <Button Grid.Row="3" Content="Экзамен"  Command="{Binding Path=GoExamineCommand}" />
    </Grid>
</Page>
